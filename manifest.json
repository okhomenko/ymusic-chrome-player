{

  "name": "Play/pause Player for Yandex.Music",
  "description": "Simple play/pause player for Yandex.Music",
  "version": "0.1.1",
  "manifest_version": 2,
  
  "icons": {
     "16": "i/icon16.png",
     "48": "i/icon48.png",
    "128": "i/icon128.png"
  },

  "permissions": [
    "tabs", "http://music.yandex.ru/*", "https://music.yandex.ru/*"
  ],

  "browser_action": {
    "default_icon": "i/play.png"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "web_accessible_resources": [
    "js/ymusic-injection.js"
  ]
  
}